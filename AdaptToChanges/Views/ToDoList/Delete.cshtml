@model AdaptToChanges.Models.ToDoList

@{
    ViewData["Title"] = "Delete " + Model.ToDoListName;
}

<h1>Delete @Model.ToDoListName</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ToDoListName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ToDoListName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ToDoListDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ToDoListDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MemberId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ToDoListId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
